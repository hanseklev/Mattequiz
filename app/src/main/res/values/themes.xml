<resources>
    <!-- Base application theme. -->
    <style name="Theme.Mattequiz" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_light</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/primary_light</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:fontFamily">@font/font</item>

        <item name="android:textSize">25sp</item>
    </style>

    <style name="Theme.Mattequiz.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ThemeOverlay.Mattequiz.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/primary_light</item>
        <item name="fullscreenTextColor">@color/primary_dark</item>
    </style>
</resources>