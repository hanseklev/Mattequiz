<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    BASE LAYOUT STYLES  -->

    <style name="Match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--    TYPOGRAPHY  -->

    <style name="gameText">
        <item name="android:textSize">45sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="scoreText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="dialogText">
        <item name="android:textSize">35sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <!--    BUTTON STYLES   -->
    <style name="main_screen_button">
        <item name="android:background">@drawable/bg_rounded_corner_50in</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>

    </style>

    <style name="numPadButton">
        <item name="android:background">@drawable/bg_rounded_corner_50in</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:textSize">30sp</item>
        <item name="fontWeight">700</item>
        <item name="backgroundTint">@color/secondary_light</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

</resources>